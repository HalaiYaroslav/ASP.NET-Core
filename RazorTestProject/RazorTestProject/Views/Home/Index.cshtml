@model Product[]
@{
    ViewBag.Title = "Product Name";
}
<div data-productid="@Model[0]?.ProductID" data-stocklevel="@ViewBag.StockLevel">
    <p>Product Name: @Model[0]?.Name</p>
    <p>Product Price: @($"{Model[0]?.Price:C2}")</p>
    <p>
        Stock Level:
        @switch ((int)ViewBag.StockLevel)
        {
            case 0:
                @:Out Of Stock
                    break;
            case 1:
            case 2:
            case 3:
                <b>Low Stock (@ViewBag.StockLevel)</b>
                break;
            default:
                @: @ViewBag.StockLevel in Stock
                break;
        }
    </p>
</div>
<table>
    <thead>
        <tr>
        <th>Name</th>
        <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@($"{p.Price:C2}")</td>
            </tr>
        }
    </tbody>
</table>